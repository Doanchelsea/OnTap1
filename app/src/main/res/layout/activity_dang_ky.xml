<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:adjustViewBounds="true"
    tools:context=".activity.DangKyActivity">
    <android.support.v7.widget.Toolbar
        android:background="#0099FF"
        app:titleTextColor="#f9f6f5"
        app:title="Đăng Ký"
        android:id="@+id/toolbardangky"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:gravity="center"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="32dp"
            android:text="Đăng Ký"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Tên đăng nhập"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edtendk"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:background="@drawable/inputlogin"
            android:hint="Tên đăng nhập"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Mật khẩu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:inputType="textPassword"
            android:id="@+id/edmkdk"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:background="@drawable/inputlogin"
            android:hint="Mật khẩu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Nhập lại mật khẩu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:inputType="textPassword"
            android:id="@+id/edmkdkl"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:background="@drawable/inputlogin"
            android:hint="Nhập lại mật khẩu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnDangky"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:text="Đăng Ký"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:text="© 2019 Now - A Foody Corporation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>